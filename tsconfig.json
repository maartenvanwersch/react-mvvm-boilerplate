{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["./components/*"],
      "@contexts/*": ["./contexts/*"],
      "@contexts": ["./contexts"],
      "@hooks/*": ["./hooks/*"],
      "@hooks": ["./hooks"],
      "@my-types/*": ["./my-types/*"],
      "@pages/*": ["./pages/*"],
      "@stores/*": ["./stores/*"],
      "@stores": ["./stores"],
      "@providers/*": ["./providers/*"],
      "@providers": ["./providers"],
    }
  },
  "include": ["./src"]
}
